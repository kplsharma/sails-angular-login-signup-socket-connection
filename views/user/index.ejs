<div class="well well-sm" style="height:auto;  width:800px; margin:0 auto; margin-top:50PX;" >

	<h3>hello this is user details page <a href="/user/signup" class="btn  btn-primary"> Add User </a></h3>

	<table class="table">
		<thead>
		<tr>
			<th></th>	
			<th>ID</th>	
			<th>Full Name</th>
			<th>User Name</th>
			<th>Email </th>
			<th colspan="3"></th>
		</tr>
		</thead>
		<tbody>
			<% _.each(users, function(user){  %>
			<tr data-id="<%= user.id %>" data-model="user" >
			<% if(user.online) { %>
			<td style="color:green;">online</td>
			<% } else{ %>
			<td style="color:red;">offline</td>
			<% } %>
			<td><%= user.id %></td>
			<td><%= user.fullname %></td>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary" > Show </a></td>
			<td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning" > Edit </a></td>
			<td>
				<form name="deleteUser" method="POST" action="/user/destroy">
					<input type="hidden" name="_method" value="delete" >
					<input type="hidden" name="id" value="<%= user.id %>">
					<input type="submit" value="Delete" class="btn btn-sm btn-danger" />
				</form>
			</td>
			</tr>
			<% }) %>
		</tbody>

	</table>
			
</div>